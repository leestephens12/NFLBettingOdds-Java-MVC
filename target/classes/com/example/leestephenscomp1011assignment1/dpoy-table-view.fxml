<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.leestephenscomp1011assignment1.Controllers.DPOYTableViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="dpoyTableView" minWidth="450.0" prefHeight="800.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="dpoyPlayerColumn" prefWidth="300.0" text="Player" />
                  <TableColumn fx:id="dpoyOddsColumn" prefWidth="300.0" text="DPOY Odds" />
                  <TableColumn fx:id="dateColumn" prefWidth="300.0" text="Date" />
               </columns>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="30.0" right="30.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <bottom>
            <Button mnemonicParsing="false" onAction="#backToDpoyGraph" text="Back To DPOY Graph" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" top="10.0" />
               </BorderPane.margin></Button>
         </bottom>
         <top>
            <Label text="DPOY Odds Regular Season 2021" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" top="20.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
